generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  image        String?
  bio          String?  // User biography/description
  passwordHash String
  recoveryKey  String?  // Hashed recovery key for password reset
  createdAt    DateTime @default(now())
  covers       Cover[]
  collections  Collection[]
  likes        Like[]
  comments     Comment[]
  collectionLikes CollectionLike[]
  sessions     Session[]
  accounts     Account[]
}

model Cover {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  source    String?
  url       String
  pageUrl   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  
  collectionId String?
  collection   Collection? @relation(fields: [collectionId], references: [id])
  likes        Like[]

  @@index([userId, createdAt])
}

model Collection {
  id          String   @id @default(cuid())
  name        String
  description String?
  visibility  String   @default("PRIVATE") // PUBLIC, PRIVATE
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  covers      Cover[]
  comments    Comment[]
  collectionLikes CollectionLike[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([visibility])
}

model Comment {
  id           String     @id @default(cuid())
  content      String
  userId       String
  collectionId String
  parentId     String?    // For replies
  createdAt    DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id])
  collection   Collection @relation(fields: [collectionId], references: [id])
  parent       Comment?   @relation("CommentReplies", fields: [parentId], references: [id])
  replies      Comment[]  @relation("CommentReplies")

  @@index([collectionId])
  @@index([parentId])
}

model CollectionLike {
  id           String     @id @default(cuid())
  userId       String
  collectionId String
  createdAt    DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id])
  collection   Collection @relation(fields: [collectionId], references: [id])

  @@unique([userId, collectionId])
  @@index([collectionId])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  coverId   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  cover     Cover    @relation(fields: [coverId], references: [id])

  @@unique([userId, coverId])
  @@index([coverId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refreshToken")
  access_token      String? @map("accessToken")
  expires_at        Int?    @map("expiresAt")
  token_type        String? @map("tokenType")
  scope             String?
  id_token          String? @map("idToken")
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}
